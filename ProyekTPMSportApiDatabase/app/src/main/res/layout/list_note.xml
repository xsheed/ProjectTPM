<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:padding="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/soft_grey"
        android:padding="4dp">

        <TextView
            android:id="@+id/t_title_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sport Note"
            android:textSize="22sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/t_overview_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_title_note"
            android:text="Note Overview"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/t_s_date_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/t_d_date_note"
            android:text="Created : "
            android:textSize="10sp"
            android:layout_above="@+id/t_overview_note"
            android:layout_marginLeft="8dp"
            android:paddingBottom="2dp"/>
        <TextView
            android:id="@+id/t_d_date_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_edit_note"
            android:paddingRight="8dp"
            android:text="2021-12-26"
            android:textSize="10sp"
            android:paddingBottom="2dp"
            android:layout_above="@+id/t_overview_note"/>
        <Button
            android:id="@+id/btn_edit_note"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_toLeftOf="@id/btn_delete_note"
            android:drawableTop="@drawable/edit_icon"
            android:backgroundTint="@color/purple_600"/>
        <Button
            android:id="@+id/btn_delete_note"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_alignParentRight="true"
            android:drawableTop="@drawable/delete_icon"
            android:backgroundTint="@color/purple_600"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>