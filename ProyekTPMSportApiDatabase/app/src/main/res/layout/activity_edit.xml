<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.EditActivity"
    android:padding="16dp">
    <TextView
        android:id="@+id/t_title_editnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport Note"
        android:textSize="32sp"
        android:textColor="@color/black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/t_title_editnote">
        <EditText
            android:id="@+id/et_editnote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:layout_below="@id/t_title_addnote"
            android:hint="Add Text Here"
            android:gravity="top"
            android:textColor="@color/black"
            />
    </ScrollView>

    <Button
        android:id="@+id/btn_done_editnote"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:drawableTop="@drawable/done_icon"
        android:backgroundTint="@color/purple_600"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>