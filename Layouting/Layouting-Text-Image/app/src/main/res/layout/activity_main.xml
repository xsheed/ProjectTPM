<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8BBD0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Gambar1"
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jam_gadang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/Gambar1"
        android:gravity="center_horizontal"
        android:text="Jam Gadang Bukit Tinggi "
        android:textSize="48sp" />

    <TextView
        android:id="@+id/Text1"
        android:layout_width="220dp"
        android:layout_height="320dp"
        android:layout_below="@id/Gambar1"
        android:gravity="center_horizontal"
        android:text="Masjid Raya Sumatera Barat "
        android:textSize="48sp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:layout_below="@id/Gambar1"
        android:layout_toRightOf="@id/Text1"
        android:scaleType="centerCrop"
        android:src="@drawable/masjid_raya_sumbar2" />

</RelativeLayout>